<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_gravity="center_horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff37afff"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="556dp"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="153dp"
                android:id="@+id/imageButton"
                android:background="@drawable/a_menu_gamero"
                android:layout_alignBottom="@+id/imageButton3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/a_menu_gulyk"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/a_menu_montero"
                android:layout_above="@+id/imageButton4"
                android:layout_alignLeft="@+id/imageButton4"
                android:layout_alignStart="@+id/imageButton4" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:id="@+id/imageButton4"
                android:background="@drawable/a_menu_chavi"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageButton2"
                android:layout_toEndOf="@+id/imageButton2" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="152dp"
                android:id="@+id/imageButton5"
                android:background="@drawable/a_menu_alvaro"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imageButton4"
                android:layout_toEndOf="@+id/imageButton4" />

            <ImageView
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:background="@drawable/a_texto_menu" />
        </RelativeLayout>

    </LinearLayout>
</HorizontalScrollView>
